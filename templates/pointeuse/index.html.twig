                <td>{{ pointeuse.user.name }}</td>
                <td>{{ pointeuse.chantiers.name }}</td>
                <td>{{ pointeuse.date ? pointeuse.date|date('Y-m-d') : '' }}</td>
                <td>{{ pointeuse.duree }}</td>
                <td>
                    <a href="{{ path('pointeuse_show', {'id': pointeuse.id}) }}">show</a>
